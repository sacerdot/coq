<!-- Notice: the markup described in this DTD is meant to be embedded -->
<!-- in foreign markup (e.g. XHTML)                                   -->

<!ENTITY % theorystructure
  '(ht:AXIOM|ht:DEFINITION|ht:THEOREM|ht:VARIABLE|ht:SECTION|ht:MODULE|ht:MUTUAL)*'>

<!ELEMENT ht:SECTION (%theorystructure;)>
<!ATTLIST ht:SECTION
          uri CDATA #REQUIRED>

<!ELEMENT ht:MODULE (%theorystructure;)>
<!ATTLIST ht:MODULE
          uri    CDATA #REQUIRED
          params CDATA #REQUIRED
          as (Module|ModuleType|AlgebraicModule|AlgebraicModuleType)>

<!ELEMENT ht:MUTUAL (ht:DEFINITION,ht:DEFINITION+)>

<!-- Theory Items -->

<!ELEMENT ht:AXIOM (Axiom)>
<!ATTLIST ht:AXIOM
          uri CDATA #REQUIRED
          as (Axiom|Declaration|Conjecture) #REQUIRED>

<!ELEMENT ht:DEFINITION (Definition|InductiveDefinition)>
<!ATTLIST ht:DEFINITION
          uri CDATA #REQUIRED
          as (Definition|InteractiveDefinition|Inductive|CoInductive
             |Record|Let|Example|Coercion|SubClass|CanonicalStructure
             |Fixpoint|CoFixpoint|Scheme|Projection|IdentityCoercion
             |Instance|Method) #REQUIRED>

<!ELEMENT ht:THEOREM (type)>
<!ATTLIST ht:THEOREM
          uri CDATA #REQUIRED
          as (Theorem|Lemma|Corollary|Fact|Remark|Property|Proposition) #REQUIRED>

<!ELEMENT ht:VARIABLE (Variable)>
<!ATTLIST ht:VARIABLE
          uri CDATA #REQUIRED
          as (Assumption|Hypothesis|LocalDefinition|LocalFact|LocalLet) #REQUIRED>
